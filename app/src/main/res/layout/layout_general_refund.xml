<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_general_refund"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/layout_title_bar"
    android:visibility="gone"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp80">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/refund_icon" />

        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:lineSpacingExtra="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp50"
            android:text="当前状态"
            android:textColor="@color/white"
            android:textSize="@dimen/dp14" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp15"
        android:lineSpacingExtra="@dimen/dp5"
        android:text="@string/refund_out_time_error"
        android:textColor="@color/black"
        android:textSize="@dimen/dp14" />

    <TextView
        android:id="@+id/cancel_order_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp15"
        android:lineSpacingExtra="@dimen/dp5"
        android:text="@string/cancel_order_time"
        android:textColor="@color/black_overlay"
        android:textSize="@dimen/dp14" />

    <TextView
        android:id="@+id/refund_pay_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp15"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:lineSpacingExtra="@dimen/dp5"
        android:text="@string/refund_pay_number"
        android:textColor="@color/black_overlay"
        android:textSize="@dimen/dp14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp15">

        <TextView
            android:id="@+id/contact_customer_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp15"
            android:background="@drawable/corners_solid_text_black_overlay"
            android:paddingBottom="@dimen/dp5"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:paddingTop="@dimen/dp5"
            android:text="@string/contact_customer_service"
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/dp13" />

    </RelativeLayout>

    <View
        android:layout_marginTop="@dimen/dp15"
        android:background="@color/gray_"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>