<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:layout_margin="@dimen/dp15">

        <com.example.administrator.friendshape.ui.view.CustomRoundAngleImageView
            android:id="@+id/merchants_img"
            android:layout_width="@dimen/dp60"
            android:layout_height="@dimen/dp60"
            android:background="@drawable/placeholder"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/merchants_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginTop="@dimen/dp5"
            android:layout_toRightOf="@+id/merchants_img"
            android:text="商户名称"
            android:ellipsize="end"
            android:maxEms="15"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/dp14" />

        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp5"
            android:text="订单状态"
            android:textColor="@color/black"
            android:textSize="@dimen/dp14" />

        <TextView
            android:id="@+id/creat_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp15"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp5"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_toRightOf="@+id/merchants_img"
            android:text="2018-05-20"
            android:textColor="@color/gray_light_text"
            android:textSize="@dimen/dp13" />

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp20"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp5"
            android:text="￥ 500"
            android:textColor="@color/black"
            android:textSize="@dimen/dp14" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_light" />

       <RelativeLayout
           android:id="@+id/contorller_layout"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp45">
            
           <TextView
               android:id="@+id/setting_order_status"
               android:layout_marginRight="@dimen/dp15"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:layout_width="@dimen/dp70"
               android:layout_height="@dimen/dp25"
               android:text="取消订单"
               android:gravity="center"
               android:textColor="@color/black_overlay"
               android:background="@drawable/corners_solid_text_black_overlay"
               android:textSize="@dimen/dp12"
               />

       </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"
        android:background="@color/gray_" />

</LinearLayout>